{
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "types": [
      // add node as an option
      "node",
      "reflect-metadata"
    ],
    "outDir": "./dist",
    "typeRoots": [
      // add path to @types
      "node_modules/@types",
      "./node_modules/@discordjs",
      "./node_modules/@ungap"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "dist/discbot.js",
    "sourceRoot": "./src/",
    "rootDir": "./src/",
  },
  "exclude": ["node_modules"]
}
